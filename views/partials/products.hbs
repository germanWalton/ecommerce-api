    {{#each products}}
<div class="card mx-auto text-center col-4 mt-3" style="width: 18rem;">
  <img src={{this.thumbnail}} class="mx-auto card-img-top">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">${{this.price}}</p>

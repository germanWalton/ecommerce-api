

<h3 class="text-center mb-5">Lista de pedidos</h3>

<table class="table">
  
  <thead>
    <tr>
      <th scope="col" class="p-4"></th>
      <th scope="col" class="p-4">ID</th>
      <th scope="col" class="p-4">USERID</th>
      <th scope="col" class="p-4">TOTAL</th>
      <th scope="col" class="p-4">CREADA</th>
      <th scope="col" class="p-4">ENVIADA</th>


    </tr>
  </thead>
  <tbody>
     {{#if orders}}
     
    {{#each orders}}
    <tr>
      <th scope="row">
      <td class="p-4">{{this._id}}</td>
      <td class="p-4">{{this.userId}}</td>
      <td class="p-4">${{this.total}}</td>
      <td class="p-4">{{this.created}}</td>
      <td class="p-4">{{this.send}}</td>
</td>

</th>
    </tr>
    {{/each}}

   {{else}}
   <h5 class="text-center mt-5">Upss.... no se encontraron pedidos</h5>
  </tbody>
</table>
   {{/if}}

